{
  "name": "taskeasy",
  "version": "1.4.0",
  "description": "Task Management Application with Update Functionality - Day 4: US3 Complete (Built with Extreme Programming practices)",
  "main": "src/TaskManager.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:day2": "jest --testPathPattern=day2",
    "test:day3": "jest --testPathPattern=day3",
    "test:day4": "jest --testPathPattern=day4",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "jest --verbose",
    "test:ci": "jest --coverage --watchAll=false",
    "start": "http-server . -p 8080",
    "dev": "http-server . -p 8080 -o"
  },
  "keywords": [
    "task-management",
    "extreme-programming",
    "javascript",
    "html",
    "css",
    "priority-sorting",
    "task-editing",
    "tdd",
    "pair-programming",
    "xp-methodology"
  ],
  "author": "TaskEasy Team - Day 4: Rian (Driver), Robi (Navigator), Zein (Reviewer)",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.js"],
    "testMatch": ["<rootDir>/src/**/__tests__/**/*.{js,jsx}", "<rootDir>/src/**/*.{test,spec}.{js,jsx}"],
    "collectCoverageFrom": ["src/**/*.{js,jsx}", "!src/**/*.test.{js,jsx}", "!src/setupTests.js"],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 70,
        "lines": 65,
        "statements": 65
      }
    },
    "coverageReporters": ["text", "lcov", "html"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}
