{
  "name": "taskeasy",
  "version": "1.0.0",
  "description": "Task Management Application built with Extreme Programming practices",
  "main": "script.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "http-server . -p 8080",
    "dev": "http-server . -p 8080 -o"
  },
  "keywords": [
    "task-management",
    "extreme-programming",
    "javascript",
    "html",
    "css"
  ],
  "author": "TaskEasy Team - Day 2",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
